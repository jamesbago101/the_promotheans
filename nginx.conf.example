# Nginx configuration for The Prometheans
# Place this file at: /etc/nginx/sites-available/theprometheans
# Then create symlink: sudo ln -s /etc/nginx/sites-available/theprometheans /etc/nginx/sites-enabled/

server {
    listen 80;
    listen [::]:80;
    
    # Replace with your domain or use _ for IP-based access
    server_name your-domain.com www.your-domain.com;
    
    # Path to your website files
    root /var/www/theprometheans;
    index index.html;
    
    # Main location block
    location / {
        try_files $uri $uri/ =404;
    }
    
    # Handle 404 errors
    error_page 404 /404.html;
    location = /404.html {
        internal;
    }
    
    # Cache static assets (images, fonts, audio)
    location ~* \.(jpg|jpeg|png|gif|ico|css|js|webp|ttf|otf|mp3|MP3)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
        access_log off;
    }
    
    # Security headers
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "no-referrer-when-downgrade" always;
    
    # Gzip compression for better performance
    gzip on;
    gzip_vary on;
    gzip_min_length 1024;
    gzip_proxied any;
    gzip_comp_level 6;
    gzip_types
        text/plain
        text/css
        text/xml
        text/javascript
        application/json
        application/javascript
        application/xml+rss
        application/x-javascript
        application/x-font-ttf
        application/vnd.ms-fontobject
        font/opentype
        image/svg+xml
        image/x-icon;
    
    # Disable access to hidden files
    location ~ /\. {
        deny all;
        access_log off;
        log_not_found off;
    }
    
    # Logging
    access_log /var/log/nginx/theprometheans_access.log;
    error_log /var/log/nginx/theprometheans_error.log;
}

